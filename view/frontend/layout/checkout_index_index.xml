<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="sidebar" xsi:type="array">
                                    <item name="config" xsi:type="array">
                                        <item name="template" xsi:type="string">Vendic_CheckoutNewsletterSubscription/sidebar</item>
                                    </item>
                                    <item name="children" xsi:type="array">
                                        <item name="newsletterSubscribe" xsi:type="array">
                                            <item name="component" xsi:type="string">Vendic_CheckoutNewsletterSubscription/js/view/subscribe</item>
                                            <item name="displayArea" xsi:type="string">newsletterSubscribe</item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
